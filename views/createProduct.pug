extends RepresentativesPage

block append stylesheet
    link(rel="stylesheet", href="/assets/css/createRep.css")

block main
    #main
        #company-logo
            .company-logo
        .content
            form#formCreateProduct(method="POST" action='/api/v1/product' enctype="multipart/form-data")
                div.row
                    div.col.s12(class="input-field")
                        input(name="name" id="name" type="text" required="true")
                        label(for="name") Name

                    div.col.s12(class="input-field")
                        select(name="categories" id="categories" required="true" multiple="true")
                            option(value="" disabled) Choose your categories
                        label Category
                    div.col.s12(class="input-field file-field")
                        div.btn
                            span Profile Image
                            input(name="profilePicture" id="profilePicture" type="file" multiple="false" required="true" accept='image/*')
                        div.file-path-wrapper
                            input(class="file-path validate" type="text" placeholder="Upload one main Image")
                    div.col.s12(class="input-field file-field")
                        div.btn
                            span Additional Images
                            input(name="image" id="image" type="file" multiple="true" accept='image/*')
                        div.file-path-wrapper
                            input(class="file-path validate" type="text" placeholder="Upload one or more images")

                    div#ResourcesList
                        div.col.s5(class="input-field file-field")
                            div.btn
                                span Resource
                                input(name="resources" id="resources" type="file")
                            div.file-path-wrapper
                                input(class="file-path validate" type="text" placeholder="Upload one recourse")
                        div.col.s5(class="input-field")
                            input(name="resources_description" id="resources_description" type="text" required="true")
                            label(for="resources_description") Description
                        div.col.s1
                            a.btn-floating.waves-effect.waves-light.blue-grey.lighten-4.add-rescource-fields
                                i.material-icons add

                        template#ResourceFields
                            div.resource-fields
                                div.col.s5(class="input-field file-field")
                                    div.btn
                                        span Resource
                                        input(name="resources" id="resources" type="file")
                                    div.file-path-wrapper
                                        input(class="file-path validate" type="text" placeholder="Upload one recourse")
                                div.col.s5(class="input-field")
                                    input(name="resources_description" id="resources_description" type="text" required="true")
                                    label(for="resources_description") Description
                                div.col.s1
                                    a.btn-floating.waves-effect.waves-light.blue-grey.lighten-4.add-rescource-fields
                                        i.material-icons add
                                div.col.s1
                                    a.btn-floating.waves-effect.waves-light.blue-grey.lighten-4.remove-rescource-fields
                                        i.material-icons remove
                div.row
                    div.col.s12
                        div.loader(style="display:none")
                            div.progress
                                div.indeterminate
                        div.buttons.center
                            button#btnCreateProduct(type="submit" class="waves-effect waves-light btn") Add
                            a(href="../representatives/dashboard" class="waves-effect waves-light btn materialize-red") Cancel

block append javascript
    script(src='/assets/js/createProduct.js')