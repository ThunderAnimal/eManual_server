extends layout

block header
    div.navbar-fixed
        nav#header
            div.nav-wrapper
                a.homepage-link(href='#')
                    img.logo-pic(src='/assets/img/logo.png', alt='dash')
                .header-search-container
                    a#btn_cat.dropdown-button.btn(data-activates='dropdown1')
                        p categories
                        i.material-icons arrow_drop_down
                    ul(id='dropdown1' class='dropdown-content')
                    input#header-search-field.input(type='text' name='search-field' placeholder="What is your brand or product?")
                    a#header-search-button.waves-effect.waves-light.btn
                        i.fa.fa-search
                        p Search
                #user-nav-ul
                    ul.right.user-login
                        if isLoggedIn
                            li
                                img.profile-pic(src=user.image class="circle responsive-img")
                            li
                                a.button.alt.dropdown-button.profile-btn(data-activates='dropdown_user')="Welcome, " + user.name
                        else
                            li
                                a.button.alt.login-btn(href='/login') Log in

                    ul(id='dropdown_user' class='dropdown-content')
                        li
                            a(href=user.profileUrl) Profile
                        li.divider
                        li
                            a(href="/logout" style="color: #f6755f") Logout
block main
    #search-widget
        #search-wrapper
            #welcome-title
                h4 Keep your World Running
                h5 A range of user and service manuals
            #search-field-wrapper
                .search-container
                    div#search-field
                        input#search-field-input.input(type='text' name='search-field' placeholder="What is your brand or product?")
                    a#search-button.waves-effect.waves-light.btn
                        i.fa.fa-search
                        p Search
            a#browse-categories.waves-effect.waves-light.btn(href='#numbers-wrapper') Browse categories
    #numbers-wrapper
        #stat-numbers
            .stat-item
                p.number 230,000
                p.number-label Products
            .separate-line
            .stat-item
                p.number 700,000
                p.number-label Manuals
            .separate-line
            .stat-item
                p.number 35,000
                p.number-label Brands
            .separate-line
            .stat-item
                p.number 500,000
                p.number-label Users
    #main-content
        #categories-list-section
            #categories-list-wrapper
                #categories-list-header
                    .title Categories
                ul#categories-list
                    template#category-template
                        li
                            a(href="#")
                                i.fa.fa-tv.category-name-icon
                                p.category-name name
                                |(
                                p.category-amount
                                |)

        #recent-manuals
            h4#recent-products-header Recently Added Products
            #recent-products-list-wrapper
                ul#recent-products-list
                   template#productTemp
                        li
                            img(src='/assets/img/product-placeholder.png')
                            a.btn-floating.waves-effect.waves-light.add-selection
                                i.material-icons add
                            a.btn-floating.waves-effect.waves-light.remove-selection(style="display:none")
                                i.material-icons remove
                            .product-info
                                a(href="#")
                                    h6 Product-name
            #load-more-button-wrapper
                a#load-more-button(href="#")
                    i.fa.fa-plus-circle
                    p Load more




block stylesheet
    link(rel="stylesheet" href="assets/css/index.css")
block javascript
    script(src='/assets/js/index.js')