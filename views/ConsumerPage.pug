extends layout

block stylesheet
    link(rel="stylesheet", href="/assets/css/userpage.css")

block header
    #wrapper
        #top-space
            nav#top-space-nav-bar
                a.homepage-link(href='#')
                    img.logo-pic(src='/assets/img/logo.png', alt='dash')
                ul.right.user-login
                    if isLoggedIn
                        li
                            img(src=user.image class="circle responsive-img" style="max-height: 60px; margin-top: 10px; margin-right: 10px")
                        li
                            a.button.alt.dropdown-button(href='' data-activates='dropdown_user')="Welcome, " + user.name
                            <i class="material-icons right" style="margin-top:-8px">arrow_drop_down</i>

                        ul(id='dropdown_user' class='dropdown-content' style='margin-top: 70px')
                            li
                                a(href=user.profileUrl) Profile
                            li.divider
                            li
                                a(href="/logout" style="color: #f6755f") Logout
                    else
                        li
                            a.button.alt(href='/login') Log in

block main
    #user-header
        #user-background
            .container
                #username
                    p.name= user.username
                    p.email="(" + user.email + ")"
                #edit-button
        #user-header-content
            div.container
                #useravatar
                    if(user.image)
                        img(src=user.image, alt='dash')
                    else
                        img(src='/assets/img/representative-placeholder.jpg', alt='dash')
                    a.waves-effect.waves-circle.waves-light.btn-floating.secondary-content(href='#')
                        i.material-icons add
                #userinfo
                    p Member Since November 2017
                #changepass-button
                    p Change password
                        a.fa.fa-lock(href='#')
                #deleteaccount-button
                    p Delete account
                        a.fa.fa-trash-o(href='#')
    #user-content
        #user-content-tabs
            .nav-content
                ul.tabs.tabs-transparent
                    li.tab
                        a.active(href='#bookmarks') Selected
                    li.tab
                        a(href='#uploaded') Uploaded
                    li.tab
                        a(href='#comments') Comments

            #bookmarks.col.s12
                #LOM
                    ul#manualUl
                    template#productTemp
                        li
                            #product-item
                                .product-pic
                                    img.pic(src='../assets/img/product-placeholder.png', alt='delete', height='20', width='20')
                                .product-info
                                    a(href='#')
                                        h3 Product Title - Model
                                    p lorem ipsum dolor sit amet. lorem ipsum dolor sit amet, ipsum dolor sit amet, lorem ipsum dolor sit amet
                                .product-delete
                                    a.btn-floating.waves-effect.waves-light.remove-selection
                                        i.material-icons remove
            #uploaded.col.s12 Uploaded
            #comments.col.s12 Comments

block append javascript
    script(src='/assets/js/consumerPageControl.js')